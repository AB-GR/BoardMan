@{
}

<h2>Users</h2>

 <div id="usersTable"></div>

 @section Css
{
	<link href="@Url.Content("~/lib/jquery-ui-1.13.1/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <br />
    <br />
	<link href="@Url.Content("~/lib/jtable.2.4.0/themes/metro/blue/jtable.css")" rel="stylesheet" type="text/css" />
}

@section scripts
{
    <script src="~/lib/jquery-ui-1.13.1/jquery-ui.js"></script>
    <script src="~/lib/jtable.2.4.0/jquery.jtable.js"></script>

     <script type="text/javascript">
          $(function () {
            $('#usersTable').jtable({
                title: "Users",
                sorting: false,
				multiSorting: false,
				columnSelectable: false,				
				actions: {
					listAction: '/Admin/ListUsers'                  
				},
                fields: {
                    Id: {
                        key: true,
                        create: false,
                        edit: false,
                        list: false
                    },
					FirstName: {
						title: 'First Name'
					},
					LastName: {
						title: 'Last Name'
					},
                    UserName: {
						title: 'User Name'
					},
                    Email: {
						title: 'Email Address'
					},
                    Subscriptions : {
                        tableId: 'subscriptionsTable',
                        title: 'Subscriptions',
                        width: '5%',
                        sorting: false,
                        edit: false,
                        create: false,
                        display: function (userData) {
                            var $img = $('<img src="/lib/jtable.2.4.0/themes/basic/close.png" title="Subscriptions" />');
                            $img.click(function () {
                                $('#usersTable').jtable('openChildTable', $img.closest('tr'), {
                                    title: "Subscriptions",
                                    sorting: false,
				                    multiSorting: false,
				                    columnSelectable: false,								                    
				                    actions: {
					                    listAction: '/Admin/ListUserSubscriptions?userId=' + userData.record.Id                                      
				                    },
                                    fields: {
                                        UserId: {
                                            title: 'UserId',
                                            list: false,
                                            update: false,
                                            type: 'hidden',
                                            defaultValue: userData.record.Id
                                        },
                                        Id: {
                                            key: true,
                                            create: false,
                                            edit: false,
                                            list: false
                                        },
                                        Name: {
						                    title: 'Name'
					                    },
					                    StartedAt: {
						                    title: 'Start Date'
					                    },
					                    ExpireAt: {
						                    title: 'End Date'
					                    },
					                    PlanName: {
						                    title: 'Plan'
					                    }
                                    }
                                }, function (data) { //opened handler
                                    data.childTable.jtable('load');
                                });
                            });
                            return $img;
                        }
                   },
                   Workspace: {
                        title: 'Workspace',
                        create: false,
                        display: function(data){
                            var $img = `<a href="/Workspaces?userId=${data.record.Id}">View Workspace</a>`;
                            return $img;
                        }
                   }
                }
            }).jtable('load');          
          });

     </script>
}